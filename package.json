{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "parcel serve src/index.pug --open",
    "lint": "eslint . && stylelint src/**/*.pcss",
    "test": "pnpm lint && pnpm build && size-limit",
    "clean": "rm -Rf dist/ .parcel-cache/",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build": "pnpm build:home && pnpm build:api",
    "start:build": "serve dist"
  },
  "dependencies": {
    "@babel/core": "^7.16.12",
    "@parcel/optimizer-cssnano": "2.2.1",
    "@parcel/optimizer-htmlnano": "2.2.1",
    "@parcel/packager-css": "2.2.1",
    "@parcel/packager-html": "2.2.1",
    "@parcel/transformer-babel": "2.2.1",
    "@parcel/transformer-css": "2.2.1",
    "@parcel/transformer-html": "2.2.1",
    "@parcel/transformer-postcss": "2.2.1",
    "@parcel/transformer-posthtml": "2.2.1",
    "@parcel/transformer-pug": "2.2.1",
    "autoprefixer": "^10.4.2",
    "del": "^6.0.0",
    "globby": "^12.2.0",
    "jstransformer-lowlight": "^0.1.0",
    "parcel": "2.2.1",
    "postcss": "^8.4.5",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^5.0.0",
    "postcss-nested": "^5.0.6",
    "pug": "^3.0.2",
    "remark-highlight.js": "^7.0.1",
    "remark-html": "^15.0.1",
    "remark-parse": "^10.0.1",
    "typedoc": "^0.21.4",
    "unified": "^10.1.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^46.1.1",
    "@logux/stylelint-config": "^0.9.0",
    "@parcel/config-default": "^2.2.1",
    "@parcel/core": "^2.2.1",
    "@size-limit/file": "^7.0.5",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.0.0",
    "nano-staged": "^0.5.0",
    "serve": "^13.0.2",
    "simple-git-hooks": "^2.7.0",
    "size-limit": "^7.0.5",
    "stylelint": "^14.2.0",
    "svgo": "^2.8.0",
    "typescript": "~4.5.5"
  },
  "engines": {
    "node": "^16.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off",
      "node/no-extraneous-require": "off"
    }
  },
  "eslintIgnore": [
    ".parcel-cache/",
    "design/",
    "dist/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config",
    "rules": {
      "color-no-hex": null
    }
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Home",
      "path": [
        "dist/index.html",
        "dist/*.svg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2",
        "!dist/logo.svg",
        "!dist/logo-leftp.svg"
      ],
      "limit": "320 KB"
    },
    {
      "name": "API",
      "path": [
        "dist/api/index.html",
        "dist/api-*.css",
        "dist/postcss.*.jpg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2"
      ],
      "limit": "275 KB"
    }
  ]
}
