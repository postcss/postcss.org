{
  "name": "postcss-homepage",
  "private": true,
  "homepage": "https://postcss.org/",
  "repository": "postcss/postcss.org",
  "license": "MIT",
  "scripts": {
    "start": "parcel serve src/index.pug --open",
    "lint": "eslint . && stylelint src/**/*.pcss",
    "test": "yarn lint && yarn build && size-limit",
    "clean": "del-cli dist/ .cache",
    "build:home": "NODE_ENV=production ./scripts/build-home.js",
    "build:api": "NODE_ENV=production ./scripts/build-api.js",
    "build": "yarn build:home && yarn build:api",
    "start:build": "serve dist"
  },
  "dependencies": {
    "autoprefixer": "^9.8.5",
    "colorette": "^1.2.1",
    "del": "^5.1.0",
    "del-cli": "^3.0.1",
    "globby": "^11.0.1",
    "jstransformer-lowlight": "^0.1.0",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.32",
    "postcss-combine-media-query": "^1.0.1",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^4.2.3",
    "posthtml": "^0.13.1",
    "pug": "^3.0.0",
    "remark-highlight.js": "^6.0.0",
    "remark-html": "^11.0.2",
    "remark-parse": "^8.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "typedoc": "^0.17.8",
    "unified": "^9.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^40.0.0",
    "@logux/stylelint-config": "^0.1.3",
    "@size-limit/file": "^4.5.4",
    "eslint": "^7.4.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.0.2",
    "eslint-plugin-prettierx": "^0.12.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "serve": "^11.3.2",
    "size-limit": "^4.5.4",
    "stylelint": "^13.6.1",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "postcss": {
    "plugins": {
      "postcss-media-minmax": {},
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "node/no-unpublished-require": "off"
    }
  },
  "eslintIgnore": [
    "web_modules/",
    "design/",
    "dist/",
    ".cache/"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.svg": "svgo",
    "*.sss": "stylelint --fix"
  },
  "size-limit": [
    {
      "name": "Home",
      "path": [
        "dist/index.html",
        "dist/*.svg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2"
      ],
      "limit": "300 KB"
    },
    {
      "name": "API",
      "path": [
        "dist/api/index.html",
        "dist/api-*.css",
        "dist/postcss.*.jpg",
        "dist/alchemy.*.jpg",
        "dist/*.woff2"
      ],
      "limit": "250 KB"
    }
  ]
}
